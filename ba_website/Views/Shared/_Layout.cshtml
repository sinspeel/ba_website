<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link rel="icon" type="image/png" href="../img/logo1.png" sizes="16x16">
    <link rel="icon" type="image/png" href="../img/logo1.png" sizes="32x32">

    <!-- for IE icon-->
    <link rel="icon" type="image/x-icon" href="../img/logo1.png">
    <link rel="shortcut icon" type="image/x-icon" href="../img/logo1.png" />

    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body id="page-top">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Blacks Afrika", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Artists", "Index", "Musicians")</li>
                    <li>@Html.ActionLink("Events", "Index", "Events")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    
                </ul>
            </div>
        </div>
    </div>

   

    <div>
        @RenderBody()
        
        
    </div>
    <section  class="header-color">
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <img class="img-responsive" src="~/img/logo1.png" />
                    </div>
                    <div class="col-md-4">
                        <p class="text-uppercase">
                            Blacks Afrika is music entertainment company with a local sounds and stuff like that.
                        </p>
                    </div>
                    <div class="col-md-5 text-center">
                        <h2 class="text-center">Social Media</h2>
                        <hr class="light">
                        <ul class="list-inline intro-social-buttons text-center">
                            <li>
                                <a href="#" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Twitter</span></a>
                            </li>
                            <li>
                                <a href="#" class="btn btn-default btn-lg"><i class="fa fa-facebook fa-fw"></i> <span class="network-name">Facebook</span></a>
                            </li>
                            <li>
                                <a href="#" class="btn btn-default btn-lg"><i class="fa fa-google-plus fa-fw"></i> <span class="network-name">Google +</span></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <hr class="pri"/>
            <p class="text-center">&copy; @DateTime.Now.Year - Black Afrika</p>
        </footer>
    </section>
        
    @Scripts.Render("~/Scripts/js")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/script.js")
    @Scripts.Render("~/bundles/bootstrap.js")
    @RenderSection("scripts", required: false)
</body>
</html>
