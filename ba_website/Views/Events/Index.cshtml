@model IEnumerable<ba_website.model.Events>

@{
    ViewBag.Title = "Index";
}
<section class="header-color">
    <div class="container">
        <h2>Events</h2>
    </div>
</section>
<div class="container">

    <p class="btn-paragraph">
        @Html.ActionLink("Create New", "Create", new { area = "" }, new { @Class= "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            @*<th>
                Group Name
            </th>*@
            <th>
                Musician
            </th>
            <th>
                Event Name
            </th>
            <th>
                Event Location
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Price
            </th>
            <th>
                VIP Price
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Groups.GroupName)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Musicians.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventStartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventEndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NormalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VIPPrice)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</div>
