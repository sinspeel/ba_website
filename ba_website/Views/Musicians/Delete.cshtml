@model ba_website.model.Musicians

@{
    ViewBag.Title = "Delete";
}
<section class="header-color">
    <div class="container">
        <h2>Artists</h2>
        <h3>Are you sure you want to delete this artist?</h3>
    </div>
</section>

<div class="container">
    <div class="row">
        <h4 class="text-center">Delete Artist</h4>
        <hr />
        <div class="col-md-4"></div>
        <div class="col-md-6">
            <div>
                
                <dl class="dl-horizontal">
                    <dt>
                        Last Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LastName)
                    </dd>

                    <dt>
                        First Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>

                    <dt>
                        Date of Birth
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Birthday)
                    </dd>

                    <dt>
                        Birth Place
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.BirthPlace)
                    </dd>

                    <dt>
                        Stage Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.StageName)
                    </dd>

                </dl>

                
            </div>

        </div>
        <div class="col-md-2"></div>
    </div>
    <div class="text-center">
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-primary" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>

