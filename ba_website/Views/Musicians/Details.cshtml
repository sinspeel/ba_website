@model ba_website.model.Musicians

@{
    ViewBag.Title = "Details";
}
<section class="header-color">
    <div class="container">
        <h2>Artists</h2>
    </div>
</section>

<div class="container">
    <div class="row">
        <h4 class="text-center"> Artist Details</h4>
        <hr />
        <div class="col-md-4"></div>
        <div class="col-md-6">
            <div>
                
                
                <dl class="dl-horizontal">
                    <dt>
                        Last Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LastName)
                    </dd>

                    <dt>
                        First Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>

                    <dt>
                        Date of Birth
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Birthday)
                    </dd>

                    <dt>
                        Birth Place
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.BirthPlace)
                    </dd>

                    <dt>
                        Stage Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.StageName)
                    </dd>

                </dl>
            </div>
           

        </div>
        <div class="col-md-2"></div>
    </div>
    <p class="text-center">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
