@model IEnumerable<ba_website.model.Musicians>

@{
    ViewBag.Title = "Index";
}
<section class="header-color">
    <div class="container">
        <h2>Artists</h2>
    </div>
</section>

<div class="container">
    <p class="btn-paragraph">
        @Html.ActionLink("Create New", "Create", new { area = "" }, new { @Class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Date of Birth
            </th>
            <th>
                Birth Place
            </th>
            <th>
                Stage Name
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthPlace)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StageName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</div>